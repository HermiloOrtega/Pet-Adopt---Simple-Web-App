@model PetAdopt.Models.Pet

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1>Register a new pet</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="PhotoURL" class="control-label"></label>
                    <input asp-for="PhotoURL" class="form-control" />
                    <span asp-validation-for="PhotoURL" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Breed" class="control-label"></label>
                    <input asp-for="Breed" class="form-control" />
                    <span asp-validation-for="Breed" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Type" class="control-label"></label>
                    @Html.DropDownList("Type",
                        new SelectList(Enum.GetValues(typeof(Pet.PetType))),
                        "-- Select --",
                        new { @class = "form-control" })
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <div class="form-group">
                        <label asp-for="Adopted" class="control-label"></label>
                        @Html.DropDownList("Adopted",
                            new SelectList(Enum.GetValues(typeof(Pet.PetAdopted))),
                            "-- Select --",
                            new { @class = "form-control" })
                        <span asp-validation-for="Adopted" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Size" class="control-label"></label>
                    @Html.DropDownList("Size",
                        new SelectList(Enum.GetValues(typeof(Pet.PetSize))),
                        "-- Select --",
                        new { @class = "form-control" })
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Gender" class="control-label"></label>
                    @Html.DropDownList("Gender",
                        new SelectList(Enum.GetValues(typeof(Pet.PetGender))),
                        "-- Select --",
                        new { @class = "form-control" })
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="HouseTrained" class="control-label"></label>
                    @Html.DropDownList("HouseTrained",
                        new SelectList(Enum.GetValues(typeof(Pet.PetHouseTrained))),
                        "-- Select --",
                        new { @class = "form-control" })
                    <span asp-validation-for="HouseTrained" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="AdoptionFee" class="control-label"></label>
                    <input asp-for="AdoptionFee" class="form-control" />
                    <span asp-validation-for="AdoptionFee" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> <span style="display: block; width: 15px;">
                <button type="button" class="btn btn-secondary" asp-action="Index">Back to List</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}